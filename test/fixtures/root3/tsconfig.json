{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": ".",
    "baseUrl": "packages",
    "paths": {
     "@monorepo/*": ["*"],
      "#foo/*": ["foo/*"],
      "#bar/*": ["bar/*"],
      "#*": ["*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true
  }
}
